<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.myyushi.AllzhangtingActivity">
    <RelativeLayout

        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:layout_centerVertical="true"
    android:id="@+id/zt_iv"
     android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content"
    android:src="@drawable/yy_jt_left"/>
    <TextView
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alldisplayroom"
        android:textColor="#222"/>

            <TextView

                android:id="@+id/cityname_tv"
                android:layout_toLeftOf="@+id/all_iv"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#222"/>
            <ImageView

                android:layout_marginRight="20dp"
                android:id="@+id/all_iv"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yy_jt_down"/>
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#efe8e8"/>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
