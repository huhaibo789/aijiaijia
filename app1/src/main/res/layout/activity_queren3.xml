<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<TextView
    android:textColor="#222"
    android:id="@+id/zhifu_baioti"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="支付方式"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/zhifu_ly"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border_zhifu">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/zhifu_iv"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alipay"/>
            <TextView
                android:textColor="#222"
                android:layout_marginLeft="20dp"
                android:id="@+id/zhifu_tv"
                android:layout_toRightOf="@+id/zhifu_iv"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zhifubao"/>
            <TextView
                android:visibility="gone"
                android:layout_toRightOf="@+id/zhifu_tv"
                android:layout_centerVertical="true"
                android:lines="1"
                android:id="@+id/zhifu_tv1"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommendzhifubao"
                />
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/border1"
            android:id="@+id/yinglian_ly"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/yinglian_iv"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unionpay"/>
            <TextView
                android:textColor="#222"
                android:layout_toRightOf="@+id/yinglian_iv"
                android:layout_centerVertical="true"
                android:id="@+id/yinglian_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yinglian"/>
            <TextView
                android:visibility="gone"
                android:layout_toRightOf="@+id/yinglian_tv"
                android:layout_centerVertical="true"
                android:id="@+id/yinglian_tv1"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yinglianpay"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/weichartcrash_ly"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border1">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/weichartcrash_iv"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weichatpay"/>
            <TextView
                android:textColor="#222"
                android:layout_marginLeft="20dp"
                android:id="@+id/weichartcrash_tv"
                android:layout_toRightOf="@+id/weichartcrash_iv"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"/>
            <TextView
                android:visibility="gone"
                android:layout_toRightOf="@+id/weichartcrash_tv"
                android:layout_centerVertical="true"
                android:lines="1"
                android:id="@+id/weichartcrash_tv1"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommendzhifubao"
                />
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/border1"
            android:id="@+id/payincrash_ly"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/payincrash_iv"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/payincash"/>
            <TextView
                android:textColor="#222"
                android:layout_toRightOf="@+id/payincrash_iv"
                android:layout_centerVertical="true"
                android:id="@+id/payincrash_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金刷卡"/>
            <TextView
                android:visibility="gone"
                android:layout_toRightOf="@+id/payincrash_tv"
                android:layout_centerVertical="true"
                android:id="@+id/payincrash_tv1"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yinglianpay"
                />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>