<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.myyushi.WebviewActivity">
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/weizhi"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/end_activity"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/yy_jt_left"/>
        <TextView
            android:textColor="#222"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:id="@+id/text_wenben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

             />
    </RelativeLayout>
<WebView
    android:background="#fff"
    android:layout_below="@+id/weizhi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/webview2"></WebView>
    <RelativeLayout
        android:id="@+id/webs_rl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/reload_text"
            android:textColor="#222"
            android:textSize="18dp"
            android:paddingBottom="120dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载失败,请检查网络"/>
        <Button
            android:id="@+id/reload_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textColor="#222"
            android:background="#CFCFCF"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="刷新"/>
    </RelativeLayout>

</LinearLayout>
