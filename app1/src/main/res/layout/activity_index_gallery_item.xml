<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <ImageView
        android:src="@drawable/icon_club"
        android:id="@+id/id_index_gallery_item_image"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop" />
<TextView
    android:lines="1"
    android:layout_below="@+id/id_index_gallery_item_image"
    android:layout_alignLeft="@+id/id_index_gallery_item_image"
    android:id="@+id/sum_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="汉斯格雅26521400"
    android:textColor="#373737"/>
    <TextView
        android:textSize="18dp"
        android:id="@+id/sum_price"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/id_index_gallery_item_image"
        android:layout_below="@+id/sum_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#212121"/>
    <TextView
        android:textSize="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/sum_title"
       android:layout_toRightOf="@+id/sum_price"
        android:id="@+id/sum_previousprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8D8D8D"/>

</RelativeLayout>