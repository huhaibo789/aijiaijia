<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <ImageView
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/nowifi"
        android:id="@+id/imag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/frage_tv"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nowifi"/>
    <Button
        android:layout_marginTop="20dp"
        android:textColor="#149985"
        android:background="@drawable/nowifi_button"
        android:layout_below="@+id/frage_tv"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/but_nowifi"/>
<LinearLayout
    android:id="@+id/zonghe_ly"
    android:layout_below="@+id/wv_gif"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView

        android:id="@+id/listview_lv1"
        android:background="#fff"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"></ListView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/fenlei_rcv"
        android:layout_weight="3"
        android:background="#fff"
        android:layout_marginBottom="50dp">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>


</RelativeLayout>
