<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <CheckBox
      android:layout_marginLeft="10dp"
        android:button="@null"
        android:background="@drawable/tab_protocol_checkbox"
        android:id="@+id/cbox"
        android:layout_marginTop="40dp"
        android:layout_width="20dp"
        android:layout_height="22dp" />
    <ImageView

        android:layout_toRightOf="@+id/cbox"
        android:layout_marginLeft="10dp"
        android:id="@+id/gouwu_iv1"
        android:layout_marginTop="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/yugang"/>
    <TextView
         android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="53dp"
        android:gravity="center"
        android:text="@string/xiajiaproduct"
        android:id="@+id/sss1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="14dip"
        android:textStyle="bold"
        android:textColor="@android:color/white" />
    <TextView
        android:visibility="gone"
        android:id="@+id/sss"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#20000000"/>
     <Button
         android:layout_toLeftOf="@+id/edit"
         android:background="@drawable/border"
         android:id="@+id/left_button"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="40dp"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:text="-"/>
   <EditText
   android:layout_toLeftOf="@+id/right_button"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="50dp"
       android:id="@+id/edit"
       android:layout_width="120dp"
       android:layout_height="wrap_content"
       android:background="@drawable/et"
       android:text="1"
       android:maxLength="4"
       android:gravity="center"
       android:lines="1"
       android:inputType="number"
      />
    <Button
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/border"
        android:id="@+id/right_button"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"/>
    <TextView
        android:id="@+id/stock_tv"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
</RelativeLayout>