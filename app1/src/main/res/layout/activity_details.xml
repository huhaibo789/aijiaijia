<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:background="#fff"
    android:id="@+id/shouhuo_return">
    <LinearLayout
        android:background="#fff"
        android:id="@+id/scro_ly"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/detailyuyue_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yy_jt_left"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#222"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/orderdetail"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/kefu_ivs"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ddkefu"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/appointdetail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222"/>

            <TextView
                android:textColor="#222"
                android:layout_marginLeft="99dp"
                android:id="@+id/appointdetail_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/total_ly"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dingwei"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:id="@+id/Dingdanshutv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             />

        </LinearLayout>
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F6F6F6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#222"
                android:id="@+id/yuyue_number"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dingdannumber"
                android:textSize="16dp"/>
            <TextView
                android:textColor="#222222"
                android:id="@+id/satte_tv"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textSize="20dp"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>
        <TextView
            android:id="@+id/arrive_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arriveshop"
            android:textSize="20dp"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>
        <TextView
            android:id="@+id/arrive_tv1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appointshop"
            android:textSize="20dp"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>
        <TextView
            android:id="@+id/noproduct"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appointproduct"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <ListView

            android:id="@+id/listview_yuyue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
        <RelativeLayout

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textColor="#666"
                android:background="@drawable/border"
                android:layout_toLeftOf="@+id/detailsmiddle_button"
                android:id="@+id/detailleft_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <Button
                android:textColor="#666"
                android:layout_marginLeft="10dp"
                android:background="@drawable/border"
                android:layout_toLeftOf="@+id/detailright_button"
                android:id="@+id/detailsmiddle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             />
            <Button
                android:layout_marginRight="10dp"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:background="#149985"
                android:layout_alignParentRight="true"
                android:id="@+id/detailright_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             />
        </RelativeLayout>
    </LinearLayout>


</ScrollView>