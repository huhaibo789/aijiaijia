<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/scro"
    >
    <LinearLayout
        android:id="@+id/changecolor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/yuyue_ly"
            android:background="#00A796"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:id="@+id/xiala_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#fff"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/xiala"
                    android:layout_centerVertical="true"
                    android:id="@+id/city_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_marginTop="30dp"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/xiala"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yy_jt_down"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tiyan"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daogoufeel"
                android:textSize="20dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ditu"
            android:layout_below="@+id/yuyue_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imv_tv"
                android:text=""/>
            <com.amap.api.maps2d.MapView
                android:layout_marginTop="10dp"
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
              />
        </RelativeLayout>


        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/map_view"
            android:id="@+id/picture_super"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/duty"
            />
        <RelativeLayout
            android:id="@+id/liulan"
            android:layout_below="@+id/picture_super"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:id="@+id/juli_tv"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shortdistance"
                android:textColor="#222"/>

            <TextView
                android:layout_toRightOf="@+id/juli_tv"
                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:id="@+id/tiyan_zhangting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allseezhangting"
                android:textColor="#149985"/>

        </RelativeLayout>
        <View
            android:layout_below="@+id/liulan"
            android:background="#C8C8C8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/zuiji_ly"
            android:layout_below="@+id/liulan"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:textColor="#222"
                android:layout_marginLeft="8dp"
                android:id="@+id/zuijin_tv"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wenben"/>
            <ImageView
                android:id="@+id/tiyan_iv"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yy_jt_right"/>
        </RelativeLayout>
        <View
            android:id="@+id/se_button"
            android:layout_below="@+id/zuiji_ly"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#F0F0F0"/>
        <RelativeLayout
            android:id="@+id/ganxing"
            android:layout_below="@+id/se_button"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:paddingLeft="8dp"
                android:layout_centerVertical="true"
                android:lines="1"
                android:textSize="18dp"
                android:id="@+id/interst"
                android:textColor="#222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interestproduct"/>
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_below="@+id/ganxing"
            android:background="#C8C8C8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/yuyue_product"
            android:layout_below="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/yuyue_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/yugang"/>
            <ImageView
                android:id="@+id/yuyue_iv1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/yugang"/>
            <ImageView
                android:id="@+id/yuyue_iv2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/yugang"/>
            <ImageView
                android:id="@+id/yuyue_iv3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/yugang"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#222"
                    android:id="@+id/sum_tv"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共几件"/>
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/jiantou"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yy_jt_right"/>
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/category_tv"
            android:layout_below="@+id/yuyue_product"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="16dp"
                android:id="@+id/leixing"
                android:layout_marginLeft="6dp"
                android:textColor="#222"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型:"/>
            <TextView
                android:textSize="16dp"
                android:layout_toRightOf="@+id/leixing"
                android:layout_marginLeft="10dp"
                android:textColor="#222"
                android:id="@+id/hua"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  花洒"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yy_jt_right"/>
        </RelativeLayout>
        <View
            android:id="@+id/view2"
            android:layout_below="@+id/category_tv"
            android:background="#C8C8C8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_below="@+id/view2"
            android:id="@+id/fengge_ly"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="16dp"
                android:paddingLeft="8dp"
                android:id="@+id/ff"
                android:textColor="#222"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风格:"/>
            <TextView
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ff"
                android:textColor="#222"
                android:id="@+id/xiandai"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  现代"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yy_jt_right"/>
        </RelativeLayout>
        <View
            android:id="@+id/se_button1"
            android:layout_below="@+id/fengge_ly"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#F0F0F0"/>
        <RelativeLayout
            android:id="@+id/yuyue_dao"
            android:layout_below="@+id/se_button1"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="18dp"
                android:paddingLeft="8dp"
                android:id="@+id/arrive"
                android:textColor="#222"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您预计到店时间:"/>
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_below="@+id/yuyue_dao"
            android:background="#C8C8C8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/arrive1"
            android:layout_below="@+id/view3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <RelativeLayout
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView

                    android:textSize="16dp"
                     android:layout_centerVertical="true"
                    android:textColor="#222"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间:"/>

                <TextView

                    android:textSize="16dp"
                    android:textColor="#211f1f"
                    android:id="@+id/time"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  "/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yy_jt_right"/>
            </RelativeLayout>

        </LinearLayout>
        <View
            android:id="@+id/view4"
            android:layout_below="@+id/arrive1"
            android:layout_marginTop="10dp"
            android:background="#C8C8C8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


            <Button
                android:textSize="16dp"
                android:textColor="#fff"
                android:layout_marginBottom="80dp"
                android:layout_below="@+id/view4"
                android:id="@+id/next_but"
                android:layout_marginTop="30dp"
                android:background="#09B442"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="下一步"/>



    </LinearLayout>



</ScrollView>