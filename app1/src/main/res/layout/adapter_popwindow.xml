<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00323232"
    android:id="@+id/background1"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/pop_details"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="27dp"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:background="#fff"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_adapter_grid_pic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/border"
                android:layout_gravity="center_vertical"

                />

            <RelativeLayout
                android:background="#fff"
                android:layout_marginTop="27dp"
                android:layout_toRightOf="@+id/iv_adapter_grid_pic"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <TextView
                    android:id="@+id/now_price"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="￥2999"
                    android:textColor="#222"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/previous_price"
                    android:textSize="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/now_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥29999"/>
                <TextView
                    android:id="@+id/stock"
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@+id/previous_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存"
                    android:textColor="#3d3d3d"/>
                <TextView
                    android:id="@+id/freight"
                    android:layout_alignLeft="@+id/previous_price"
                    android:textColor="#3d3d3d"
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/previous_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/stock"/>
                <TextView
                    android:id="@+id/chose_tv"
                    android:textColor="#3d3d3d"
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@+id/stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已选"/>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/jilu"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222"
            android:text="dssd"/>
        <TextView

            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"/>

        <ScrollView
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="310dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/class_sku"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="颜色/产品分类"
                    android:textColor="#3d3d3d"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/allselect_rl"
                        android:background="@drawable/h5detailborder"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        >
                        <TextView
                            android:lines="1"
                            android:ellipsize="end"
                            android:textColor="#222"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="15dp"
                            android:id="@+id/select_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="标准d"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/selecttwo"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/h5detailsnochose"
                        android:layout_width="100dp"
                        android:layout_height="40dp">
                        <TextView
                            android:lines="1"
                            android:ellipsize="end"
                            android:textColor="#222"
                            android:id="@+id/select_tv1"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="标准"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/selectthree"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/h5detailsnochose"
                        android:layout_width="100dp"
                        android:layout_height="40dp">
                        <TextView
                            android:lines="1"
                            android:ellipsize="end"
                            android:textColor="#222"
                            android:id="@+id/select_tv2"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="标准"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:id="@+id/selectfour"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/h5detailsnochose"
                        android:layout_width="100dp"
                        android:layout_height="40dp">
                        <TextView
                            android:lines="1"
                            android:ellipsize="end"
                            android:textColor="#222"
                            android:id="@+id/select_tv4"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="标准"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:id="@+id/selectfive"
                        android:background="@drawable/h5detailsnochose"
                        android:layout_width="100dp"
                        android:layout_height="40dp">
                        <TextView
                            android:lines="1"
                            android:ellipsize="end"
                            android:textColor="#222"
                            android:id="@+id/select_tv5"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="标准"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:id="@+id/selectsex"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/h5detailsnochose"
                        android:layout_width="100dp"
                        android:layout_height="40dp">
                        <TextView
                            android:lines="1"
                            android:ellipsize="end"
                            android:textColor="#222"
                            android:id="@+id/select_tv6"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="标准"
                            />
                    </RelativeLayout>
                </LinearLayout>



                <View
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f5f5" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/install_service"
                        android:textColor="#222"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安装服务"/>
                    <ImageView
                        android:id="@+id/describe_iv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shuoming"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/noinstall_rl"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/h5detailborder"
                        android:layout_width="100dp"
                        android:layout_height="40dp">
                        <TextView
                            android:textColor="#222222"
                            android:textSize="15dp"
                            android:id="@+id/noinstall"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="飞雨两件套"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/install_rl"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/h5detailsnochose"
                        android:layout_width="100dp"
                        android:layout_height="40dp">
                        <TextView
                            android:textColor="#222222"
                            android:id="@+id/install_tv"
                            android:layout_centerVertical="true"
                            android:textSize="15dp"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="飞雨三件套"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f5f5"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:textColor="#222"
                        android:textSize="18dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="购买数量" />
                    <TextView
                        android:background="@drawable/h5jian"
                        android:id="@+id/pop_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        />
                    <TextView
                        android:background="@drawable/shuziborder"
                        android:textColor="#222"
                        android:id="@+id/pop_num"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="center"
                        android:text="1" />
                    <TextView
                        android:background="@drawable/h5jia"
                        android:textColor="#222"
                        android:id="@+id/pop_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        />
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f5f5"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/allsale"
                        android:textSize="18dp"
                        android:textColor="#222"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计:"/>
                    <TextView
                        android:layout_toLeftOf="@+id/allnum"
                        android:layout_marginTop="10dp"
                        android:textColor="#222"
                        android:text="￥"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/allnum"
                        android:textSize="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2999"
                        android:textColor="#222"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout

            android:id="@+id/sure_result"
            android:background="#fbd23a"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView

                android:textSize="18dp"
                android:textColor="#222"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="#fbd23a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"/>
        </RelativeLayout>

    </LinearLayout>





</RelativeLayout>