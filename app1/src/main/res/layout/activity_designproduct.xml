<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/design_iv"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/yugang"/>
        <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignLeft="@+id/design_bn"
                android:layout_toLeftOf="@+id/design_tv1"
                android:layout_marginRight="8dp"
                android:text="dssf"
                android:textColor="#222"
                android:textSize="14dp"
                android:id="@+id/design_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="ds"
                android:textColor="#999"
                android:layout_below="@+id/design_tv"
                android:id="@+id/design_bn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true"

                />
            <TextView
                android:text="sdd"
                android:id="@+id/designtext"
                android:singleLine="true"
                android:lines="1"
                android:textColor="#999"
                android:layout_below="@+id/design_bn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginRight="10dp"
                android:text="dsds"
                android:id="@+id/design_tv1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222222"/>
            <TextView
                android:text="dsdf"
                android:visibility="invisible"
                android:layout_marginLeft="20dp"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/design_tv1"
                android:id="@+id/design_tv2"
                android:layout_marginTop="67dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView

                android:layout_marginLeft="40dp"
                android:textColor="#000"
                android:id="@+id/design_shuliang"
                android:layout_below="@+id/design_bn"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:layout_marginRight="60dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="#f5f5f5"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>