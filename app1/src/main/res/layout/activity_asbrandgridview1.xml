<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
 <ImageView
     android:id="@+id/image_product"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/yugang"/>
    <TextView
        android:textColor="#666"
        android:textSize="18dp"
        android:layout_below="@+id/image_product"
        android:id="@+id/brand_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textSize="16dp"
        android:layout_alignLeft="@+id/brand_price"
        android:id="@+id/brand_biaoti"
        android:layout_below="@+id/brand_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="汉斯格雅27345000s"/>
    <TextView
        android:textSize="16dp"
        android:textColor="#222"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/brand_biaoti"
        android:id="@+id/brand_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥2999"
        />
    <TextView
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/brand_biaoti"
        android:layout_toRightOf="@+id/brand_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="666"/>

</RelativeLayout>