<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:id="@+id/h5base_rl"
    >
<RelativeLayout
    android:background="#fbd23a"
    android:id="@+id/dingdanly"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/return_iv1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/yy_jt_left"/>
    <TextView
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/row_one_item_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/sureorder"
        android:textColor="#000"
        android:textSize="20dp"/>
</RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:background="#fff"
       android:layout_below="@+id/dingdanly"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <RadioGroup
         android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="50dp">
     <TextView
         android:textColor="#222222"
         android:layout_centerVertical="true"
        android:id="@+id/heji"
         android:layout_marginLeft="8dp"
         android:textSize="15dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/total"/>

     <TextView
         android:layout_centerVertical="true"
         android:id="@+id/qianhao"
         android:layout_toRightOf="@+id/heji"
         android:lines="1"
         android:textColor="#222222"
         android:layout_marginLeft="8dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Â¥"/>
     <TextView
         android:layout_centerVertical="true"
         android:layout_toRightOf="@+id/qianhao"
         android:lines="1"
         android:textColor="#222222"
         android:id="@+id/zhifu_jiage"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        />
     <Button
         android:layout_marginBottom="10dp"
         android:layout_marginRight="10dp"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:id="@+id/zhifu_now"
         android:background="#fbd23a"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/nowpay"
         android:textColor="#222222"/>
 </RelativeLayout>
    </RadioGroup>
</RelativeLayout>
