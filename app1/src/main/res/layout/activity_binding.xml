<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myyushi.bindingActivity">
<RelativeLayout
    android:background="#fbd23a"
    android:id="@+id/title_rl"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:id="@+id/bind_iv"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/yy_jt_left"/>
    <TextView
        android:textColor="#222"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定手机号"/>
</RelativeLayout>
  <View
      android:id="@+id/bing_view"
      android:layout_below="@+id/title_rl"
      android:layout_width="match_parent"
      android:layout_height="5dp"
      android:background="#f5f5f5"/>
    <EditText

        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:inputType="number"
        android:background="@null"
        android:id="@+id/login_zcnum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bingname"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/bing_view"/>
    <View
        android:layout_below="@+id/login_zcnum1"
        android:background="#e6e1e1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:inputType="number"
        android:id="@+id/login_yanzheng1"
        android:layout_below="@+id/login_zcnum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:hint="@string/shoujiyanzheng"
        android:background="@null"/>
    <View
        android:layout_below="@+id/login_yanzheng1"
        android:background="#e6e1e1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/huoqu_tv"
        android:layout_below="@+id/login_zcnum1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/huoquyanzheng"
        android:textColor="#222222"/>
    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:singleLine="true"
        android:maxLength="12"
        android:background="@null"
        android:id="@+id/login_shuzi1"
        android:layout_below="@+id/login_yanzheng1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:hint="设置密码(6-12位的数字或字母组成)"
        android:inputType="textPassword"
        android:digits="@string/filter_vcode"/>
    <View
        android:id="@+id/bing_view1"
        android:layout_below="@+id/login_shuzi1"
        android:background="#e6e1e1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/binding_descrip"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/bing_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定后可以用手机登录"/>
    <Button
        android:clickable="false"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:id="@+id/login_zhuce2"
        android:background="#B4B4B4"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/binding_descrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sure"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
