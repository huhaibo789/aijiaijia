<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/design_rl"
        android:layout_below="@+id/status_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <uploadpicture.CircleImg
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/design_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pictureme"
            />
        <TextView
            android:textColor="#222"
            android:textSize="18dp"
            android:id="@+id/design_infomation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zhufubao@qq.com"/>
        <TextView
            android:id="@+id/design_lv"
            android:layout_alignLeft="@+id/design_infomation"
            android:textColor="#666"
            android:textSize="16dp"
            android:layout_below="@+id/design_infomation"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设计师Lv8"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yy_jt_right"/>
    </RelativeLayout>
    <View
        android:id="@+id/design_view"
        android:layout_below="@+id/design_rl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>
    <LinearLayout
        android:id="@+id/income_ly"
        android:orientation="horizontal"
        android:layout_below="@+id/design_view"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="18dp"
                android:textColor="#222"
                android:id="@+id/money_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12,888"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#747474"
                android:layout_below="@+id/money_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日收入"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="18dp"
                android:textColor="#222"
                android:id="@+id/money_waitincome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29,456"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#747474"
                android:layout_below="@+id/money_waitincome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待发收入"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="18dp"
                android:textColor="#222"
                android:id="@+id/money_canincome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39,197"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#747474"
                android:layout_below="@+id/money_canincome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提收入"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:textColor="#747474"
                android:id="@+id/money_withdrawal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yy_jt_right"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_below="@+id/income_ly"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"/>
</LinearLayout>