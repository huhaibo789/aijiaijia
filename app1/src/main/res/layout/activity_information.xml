<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myyushi.InformationActivity">
    <RelativeLayout
        android:background="#149985"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/return_iv2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/daogouruturn"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jibeninformation"
            android:textSize="16dp"
            android:gravity="center_horizontal"/>

    </RelativeLayout>
    <TextView

        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yourinformation"
        android:textColor="#222"
        android:textSize="16dp"/>
    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#DBDBDB"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="姓名："
    android:textColor="#222"
    android:textSize="16dp"/>
    <EditText
        android:textSize="16dp"
        android:id="@+id/shuru_name"
        android:layout_marginTop="10dp"
        android:hint=""
      android:background="@null"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="#DBDBDB"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机："
        android:textColor="#222"
        android:textSize="16dp"/>
        <EditText
            android:textSize="16dp"
            android:id="@+id/shuru_phone"
            android:layout_marginTop="10dp"
            android:hint=""
          android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="#DBDBDB"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/diqu_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/tishi_qu"
            android:textColor="#222"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区    省、市、区"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/sanji_province"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tishi_qu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yy_jt_right"/>
    </RelativeLayout>

 <View
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="8dp"
     android:layout_marginTop="5dp"
     android:background="#DBDBDB"/>
    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="80dp">


        <EditText
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/shuru_address"
            android:layout_marginTop="10dp"
            android:hint="详细地址"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         />
    </RelativeLayout>
    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="#DBDBDB"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="9dp"
    android:background="#f5f2f2"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注"
        android:textColor="#000"
        android:textSize="16dp"/>
    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="#DBDBDB"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
         android:gravity="start"
        android:id="@+id/shuru_memo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
         android:background="@null"/>
    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#eae1e1"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <Button
        android:textSize="20dp"
        android:textColor="#fff"
        android:id="@+id/sure_button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:background="@drawable/daogounav"/>
</LinearLayout>
