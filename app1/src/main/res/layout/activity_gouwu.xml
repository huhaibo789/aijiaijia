<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.administrator.myyushi.HuasaActivity">
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/shouhuo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/shouhuo_iv2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/yy_jt_left"/>
        <TextView
            android:id="@+id/fengge_tv1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shopcar"
            android:textColor="#000"
            android:textSize="20dp"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/bianji"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bianji"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>

    </RelativeLayout>
    <View
        android:id="@+id/xian1"
        android:layout_below="@+id/shouhuo1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ded8d8"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_below="@+id/xian1"
        android:id="@+id/gouwuche"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:ptrAnimationStyle="flip">
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

    <RelativeLayout
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

           <CheckBox

               android:layout_centerVertical="true"
               android:layout_marginLeft="8dp"
               android:checked="true"
               android:id="@+id/select_all"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:button="@null"
               android:background="@drawable/tab_protocol_checkbox"
               />
           <TextView
               android:layout_centerVertical="true"
               android:id="@+id/all_xuanze"
               android:layout_toRightOf="@+id/select_all"
               android:textColor="#000"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/allselect"/>
        <TextView
            android:id="@+id/qianjia"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/all_xuanze"
            android:textColor="#149985"
           android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allheji"/>
        <TextView

            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/yuyue_shop"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/qianjia"
            android:lines="1"
            android:id="@+id/zongji"
            android:textColor="#149985"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <Button
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/jiesuan"
            android:lines="1"
            android:textColor="#149985"
            android:id="@+id/yuyue_shop"
             android:textSize="16dp"
            android:background="@drawable/border_noshangpin"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="@string/shopfeel"/>
        <Button
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:lines="1"
            android:layout_marginRight="6dp"
            android:textColor="#fff"
            android:id="@+id/jiesuan"
            android:background="#149985"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="@string/jiesuan"/>

    </RelativeLayout>

</RelativeLayout>
