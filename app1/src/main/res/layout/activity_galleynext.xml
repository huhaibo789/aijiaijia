<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/xianxin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"/>
 <TextView
     android:layout_marginTop="10dp"
     android:layout_below="@+id/xianxin"
     android:id="@+id/recommend"
     android:layout_centerHorizontal="true"
     android:textSize="18dp"
     android:textColor="#222"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/shopkeeper"/>
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/recommend"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/huanji"/>
    <newfrage.InnerGridView
        android:layout_below="@+id/recommend"
        android:id="@+id/gridviewrecommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="4dip"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dip" ></newfrage.InnerGridView>
</RelativeLayout>