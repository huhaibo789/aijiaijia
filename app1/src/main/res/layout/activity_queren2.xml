<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ry_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/taitou_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fapiao"
            android:textColor="#222"/>
        <EditText
            android:focusable="false"
            android:textColor="#CDCDCD"
            android:id="@+id/geren_tv"
           android:layout_toRightOf="@+id/taitou_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="@string/person"
            android:paddingLeft="10dp"
            android:textColorHint="#CDCDCD"
            android:textSize="14dp"
            android:background="@null"/>
    </RelativeLayout>

    <View
        android:id="@+id/xian_v"
        android:layout_below="@+id/ry_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"/>
    <TextView
        android:id="@+id/beizhu_tv"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/xian_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beizhu"
        android:textColor="#222"/>
    <View
        android:id="@+id/xian_v1"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/beizhu_tv"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <EditText
        android:textColorHint="#CDCDCD"
        android:textColor="#CDCDCD"
        android:layout_marginTop="8dp"
       android:layout_below="@+id/xian_v"
        android:layout_toRightOf="@+id/beizhu_tv"
        android:textSize="16dp"
        android:id="@+id/shuru_et"
        android:paddingLeft="10dp"
        android:hint="选填"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/shuru_et"
        android:background="#F2F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</RelativeLayout>