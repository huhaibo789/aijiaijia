<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:id="@+id/xinxi"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共1件商品，合计¥5699.00（含运费¥0.00）"/>
    <View
        android:id="@+id/xian_view1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/xinxi"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/xian_view1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:textColor="#222"
            android:background="@drawable/border"
            android:layout_toLeftOf="@+id/addviewmiddle_button"
            android:id="@+id/addviewleft_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="1"
            android:focusable="false"
            android:clickable="true"/>
        <Button
            android:textColor="#222"
            android:layout_marginLeft="8dp"
            android:background="@drawable/border"
            android:layout_toLeftOf="@+id/addviewright_button"
            android:id="@+id/addviewmiddle_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="2"
            android:focusable="false"
            android:clickable="true"/>
        <Button
            android:textColor="#222222"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="10dp"
            android:background="#fbd23a"
            android:id="@+id/addviewright_button"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="3"
            android:focusable="false"
            android:clickable="true"/>
    </RelativeLayout>
</RelativeLayout>