        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:id="@+id/tui_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/yugang"/>
