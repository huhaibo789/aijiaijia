             android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/tui_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"/>

    </RelativeLayout>

    <ImageView
